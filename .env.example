# Local Homebrew Postgres (no password, socket auth)
DATABASE_URL=postgres://localhost:5432/omnilith_dev
# Docker Postgres (if using docker-compose.yml)
# DATABASE_URL=postgres://omnilith:omnilith@localhost:5432/omnilith
PORT=3000

# Optional: forward demo interest signups server-side
# SUBSTACK_SUBSCRIBE_URL=https://your-publication.substack.com/api/v1/free?email={email}

# Seed profile: unified local profile
# OMNILITH_SEED_PROFILE=v1-demo

# Web auth toggle for local development:
# true keeps auth available while guest paths remain primary
# VITE_AUTH_ENABLED=true

# Guest panel strategy when write access is required:
# interest => show email capture
# login => show login prompt
# VITE_GUEST_ACCESS_STRATEGY=interest

# Web dev server + API proxy target
# VITE_DEV_PORT=5173
# VITE_API_TARGET=http://localhost:3000

# Suggested unified local profile:
# DATABASE_URL=postgres://localhost:5432/omnilith_dev PORT=3000 OMNILITH_SEED_PROFILE=v1-demo VITE_AUTH_ENABLED=true VITE_GUEST_ACCESS_STRATEGY=interest VITE_API_TARGET=http://localhost:3000 VITE_DEV_PORT=5173

# Legacy seed profile (opt-in only):
# OMNILITH_SEED_PROFILE=full-dev
