# Local Homebrew Postgres (no password, socket auth)
DATABASE_URL=postgres://localhost:5432/omnilith
# Docker Postgres (if using docker-compose.yml)
# DATABASE_URL=postgres://omnilith:omnilith@localhost:5432/omnilith
PORT=3000

# Optional: forward demo interest signups server-side
# SUBSTACK_SUBSCRIBE_URL=https://your-publication.substack.com/api/v1/free?email={email}

# Seed profile: v1-demo (default) or full-dev
# OMNILITH_SEED_PROFILE=v1-demo

# Web auth toggle for local development:
# false keeps canonical guest demo flow
# true re-enables auth session + login dialog prompts
# VITE_AUTH_ENABLED=false

# Guest panel strategy when write access is required:
# interest => show email capture
# login => show login prompt
# VITE_GUEST_ACCESS_STRATEGY=interest

# Web dev server + API proxy target (useful for running demo/auth side-by-side)
# VITE_DEV_PORT=5173
# VITE_API_TARGET=http://localhost:3000

# Suggested local profile pairs:
# demo: DATABASE_URL=postgres://localhost:5432/omnilith_demo PORT=3000 OMNILITH_SEED_PROFILE=v1-demo VITE_AUTH_ENABLED=false VITE_GUEST_ACCESS_STRATEGY=interest
# auth: DATABASE_URL=postgres://localhost:5432/omnilith_auth PORT=3001 OMNILITH_SEED_PROFILE=full-dev VITE_AUTH_ENABLED=true VITE_GUEST_ACCESS_STRATEGY=login
