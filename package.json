{
  "name": "omnilith",
  "private": true,
  "scripts": {
    "architecture-report": "node scripts/architecture-report.mjs",
    "web:dependency-graph": "node scripts/generate-web-dependency-graph.mjs",
    "web:dependency-graph:docs": "node scripts/generate-web-dependency-graph.mjs --out docs/web-dependency-graph.html",
    "boundaries": "node scripts/check-boundaries.mjs",
    "intent-headers": "node scripts/check-intent-headers.mjs",
    "intent-headers:strict": "node scripts/check-intent-headers.mjs --strict",
    "intent-headers:update-baseline": "node scripts/check-intent-headers.mjs --update-baseline",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "check": "pnpm run boundaries && pnpm run intent-headers && pnpm -r build && pnpm -r lint && pnpm -r test",
    "format": "biome format --write packages/",
    "dev": "pnpm run dev:world",
    "dev:web": "pnpm run dev:world",
    "dev:world": "DATABASE_URL=postgres://localhost:5432/omnilith_dev PORT=3000 OMNILITH_SEED_PROFILE=world-map-only VITE_AUTH_ENABLED=true VITE_GUEST_ACCESS_STRATEGY=interest VITE_API_TARGET=http://localhost:3000 VITE_DEV_PORT=5173 pnpm --filter @omnilith/api --filter @omnilith/web-next --parallel dev",
    "dev:web-next": "pnpm run dev:world",
    "dev:v1-demo": "DATABASE_URL=postgres://localhost:5432/omnilith_dev PORT=3000 OMNILITH_SEED_PROFILE=v1-demo VITE_AUTH_ENABLED=true VITE_GUEST_ACCESS_STRATEGY=interest VITE_API_TARGET=http://localhost:3000 VITE_DEV_PORT=5174 pnpm --filter @omnilith/api --filter @omnilith/web-next --parallel dev",
    "dev:unified": "pnpm run dev:v1-demo",
    "build:web": "pnpm --filter @omnilith/web-next build",
    "lint:web": "pnpm --filter @omnilith/web-next lint",
    "test:web": "pnpm --filter @omnilith/web-next test",
    "build:web-next": "pnpm --filter @omnilith/web-next build",
    "lint:web-next": "pnpm --filter @omnilith/web-next lint",
    "test:web-next": "pnpm --filter @omnilith/web-next test",
    "db:migrate": "pnpm --filter @omnilith/api db:migrate",
    "db:reset": "OMNILITH_ALLOW_DB_RESET=true OMNILITH_RUNTIME_ENV=local pnpm --filter @omnilith/api db:reset",
    "db:reset:world": "OMNILITH_ALLOW_DB_RESET=true OMNILITH_RUNTIME_ENV=local DATABASE_URL=postgres://localhost:5432/omnilith_dev OMNILITH_SEED_PROFILE=world-map-only pnpm --filter @omnilith/api db:reset",
    "db:reset:web-next": "pnpm run db:reset:world",
    "db:reset:v1-demo": "OMNILITH_ALLOW_DB_RESET=true OMNILITH_RUNTIME_ENV=local DATABASE_URL=postgres://localhost:5432/omnilith_dev OMNILITH_SEED_PROFILE=v1-demo pnpm --filter @omnilith/api db:reset",
    "db:reset:unified": "pnpm run db:reset:v1-demo",
    "github:dispatch-issues": "pnpm --filter @omnilith/api github:dispatch-issues",
    "regulator:run": "pnpm --filter @omnilith/api regulator:run",
    "hooks:install": "git config core.hooksPath .githooks",
    "hooks:pre-commit": "pnpm -r lint",
    "hooks:pre-push": "pnpm run check",
    "issue-proposals:validate": "node scripts/issue-proposals.mjs validate",
    "issue-proposals:sync": "node scripts/issue-proposals.mjs sync",
    "cadence:export": "node scripts/cadence-sync.mjs export",
    "cadence:sync": "node scripts/cadence-sync.mjs sync",
    "cadence:gui": "node scripts/cadence-sync-gui.mjs",
    "agent:receiver": "node scripts/agent-webhook-receiver.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3"
  },
  "dependencies": {
    "gsap": "^3.14.2"
  }
}
